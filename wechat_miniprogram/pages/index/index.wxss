/* pages/index/index.wxss */
.container {
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #1a1a1a;
}

.loading {
  text-align: center;
  color: #fff;
}

.loading-icon {
  font-size: 48px;
  margin-bottom: 20px;
  animation: bounce 1s infinite;
}

.loading-text {
  font-size: 16px;
  color: #ff6b35;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-10px);
  }
  60% {
    transform: translateY(-5px);
  }
}
