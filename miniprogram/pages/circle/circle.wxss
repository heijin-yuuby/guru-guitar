/* pages/circle/circle.wxss */

.circle-canvas {
  width: 600rpx;
  height: 600rpx;
  margin: 0 auto;
  display: block;
  background: #FAFAFA;
  border-radius: 16rpx;
}

.key-info {
  margin-top: 40rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #F8F9FA 0%, #E9ECEF 100%);
  border-radius: 16rpx;
  border: 2rpx solid #E0E0E0;
}

.key-name {
  font-size: 48rpx;
  font-weight: 700;
  color: #1A1A1A;
  text-align: center;
  margin-bottom: 32rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.key-details {
  space-y: 24rpx;
}

.detail-row {
  display: flex;
  flex-direction: column;
  margin-bottom: 24rpx;
}

.label {
  font-size: 28rpx;
  font-weight: 600;
  color: #495057;
  margin-bottom: 12rpx;
}

.notes {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.notes .note {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #FFFFFF;
  color: #1A1A1A;
  font-size: 28rpx;
  font-weight: 600;
  border: 3rpx solid #E0E0E0;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.notes .note.root {
  background: linear-gradient(135deg, #FF4444 0%, #CC2222 100%);
  color: #FFFFFF;
  border-color: #FF4444;
  transform: scale(1.1);
  box-shadow: 0 6rpx 12rpx rgba(255, 68, 68, 0.3);
}

.chords {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.chords .chord {
  display: inline-block;
  padding: 16rpx 24rpx;
  background: #FFFFFF;
  color: #1A1A1A;
  font-size: 26rpx;
  font-weight: 600;
  border-radius: 12rpx;
  border: 2rpx solid #E0E0E0;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.chords .chord:active {
  background: #1A1A1A;
  color: #FFFFFF;
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.key-signature {
  font-size: 28rpx;
  color: #6C757D;
  font-weight: 500;
  background: #FFFFFF;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  border: 2rpx solid #E0E0E0;
  display: inline-block;
}

.related-keys {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.key-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #FFFFFF;
  border: 2rpx solid #E0E0E0;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.key-card:active {
  background: #F8F9FA;
  border-color: #1A1A1A;
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.key-card-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
}

.key-card-relation {
  font-size: 24rpx;
  color: #6C757D;
  background: #F8F9FA;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
}

.practice-suggestions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.suggestion-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #FFFFFF;
  border: 2rpx solid #E0E0E0;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.suggestion-item:active {
  background: #F8F9FA;
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.suggestion-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
  filter: grayscale(0.2);
}

.suggestion-content {
  flex: 1;
}

.suggestion-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 8rpx;
}

.suggestion-desc {
  font-size: 26rpx;
  color: #6C757D;
  line-height: 1.4;
}

.suggestion-action {
  padding: 16rpx 24rpx;
  background: #1A1A1A;
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: 600;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.suggestion-action:active {
  background: #333333;
}

.instructions {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.instruction-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background: linear-gradient(135deg, #F8F9FA 0%, #E9ECEF 100%);
  border-radius: 12rpx;
  border: 2rpx solid #E0E0E0;
}

.instruction-number {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  background: #1A1A1A;
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: 700;
  border-radius: 50%;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.instruction-text {
  font-size: 28rpx;
  color: #495057;
  line-height: 1.5;
  padding-top: 8rpx;
}

/* 响应式调整 */
@media (max-width: 600rpx) {
  .circle-canvas {
    width: 500rpx;
    height: 500rpx;
  }
  
  .key-name {
    font-size: 40rpx;
  }
  
  .notes .note {
    width: 70rpx;
    height: 70rpx;
    font-size: 24rpx;
  }
}
