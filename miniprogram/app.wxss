/**app.wxss**/
/* 全局样式 */

page {
  background-color: #FAFAFA;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Arial, sans-serif;
  font-size: 32rpx;
  color: #1A1A1A;
  line-height: 1.6;
}

/* 通用容器 */
.container {
  padding: 40rpx;
  min-height: 100vh;
}

.section {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

/* 标题样式 */
.page-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 32rpx;
  text-align: center;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 24rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

/* 按钮样式 */
.btn {
  display: inline-block;
  padding: 24rpx 48rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.btn-primary {
  background: #1A1A1A;
  color: #FFFFFF;
}

.btn-primary.active {
  background: #333;
}

.btn-secondary {
  background: #F5F5F5;
  color: #1A1A1A;
  border: 2rpx solid #E0E0E0;
}

.btn-secondary.active {
  background: #1A1A1A;
  color: #FFFFFF;
  border-color: #1A1A1A;
}

.btn-small {
  padding: 16rpx 32rpx;
  font-size: 24rpx;
}

/* 卡片样式 */
.card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.card.active {
  border-color: #1A1A1A;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 16rpx;
}

.card-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 网格布局 */
.grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.grid-item {
  flex: 1;
  min-width: 0;
}

.grid-2 .grid-item {
  flex-basis: calc(50% - 8rpx);
}

.grid-3 .grid-item {
  flex-basis: calc(33.333% - 12rpx);
}

.grid-4 .grid-item {
  flex-basis: calc(25% - 12rpx);
}

/* 列表样式 */
.list {
  background: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
}

.list-item {
  padding: 32rpx;
  border-bottom: 2rpx solid #F5F5F5;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: background-color 0.3s ease;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item.active {
  background-color: #F8F8F8;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #1A1A1A;
  margin-bottom: 8rpx;
}

.list-item-desc {
  font-size: 26rpx;
  color: #999;
}

.list-item-action {
  margin-left: 24rpx;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  background: #F5F5F5;
  color: #666;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

.tag.active {
  background: #1A1A1A;
  color: #FFFFFF;
}

/* 状态样式 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  color: #999;
}

.loading-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
}

/* 工具类 */
.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.mb-16 {
  margin-bottom: 16rpx;
}

.mb-24 {
  margin-bottom: 24rpx;
}

.mb-32 {
  margin-bottom: 32rpx;
}

.mt-16 {
  margin-top: 16rpx;
}

.mt-24 {
  margin-top: 24rpx;
}

.mt-32 {
  margin-top: 32rpx;
}

.p-16 {
  padding: 16rpx;
}

.p-24 {
  padding: 24rpx;
}

.p-32 {
  padding: 32rpx;
}

/* 音符和和弦相关样式 */
.note {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #F5F5F5;
  color: #1A1A1A;
  font-size: 24rpx;
  font-weight: 600;
  margin: 4rpx;
}

.note.active {
  background: #1A1A1A;
  color: #FFFFFF;
}

.note.root {
  background: #FF4444;
  color: #FFFFFF;
}

.chord {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  border: 2rpx solid #E0E0E0;
  margin: 8rpx;
  transition: all 0.3s ease;
}

.chord.active {
  border-color: #1A1A1A;
  background: #F8F8F8;
}

.chord-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 8rpx;
}

.chord-type {
  font-size: 22rpx;
  color: #666;
}
